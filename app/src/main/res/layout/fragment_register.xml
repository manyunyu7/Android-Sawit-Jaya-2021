<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.auth.AuthRegister">

    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_marginEnd="20dp"
                    android:id="@+id/btn_back"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
                    app:tint="@color/blue_auth" />

                <TextView
                    android:id="@+id/label_back"
                    android:layout_centerInParent="true"
                    android:layout_toEndOf="@id/btn_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Halaman Utama"
                    android:textColor="@color/home_secondary"
                    android:textSize="13sp" />

                <TextView
                    android:textAlignment="textEnd"
                    android:layout_centerInParent="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@id/label_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Daftar"
                    android:textColor="@color/home_secondary"
                    android:textSize="18sp" />

            </RelativeLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Nama"
                android:textColor="@color/home_secondary"
                android:textSize="16sp" />

            <EditText
                android:fontFamily="@font/poppins_regular"
                android:hint="Email"
                android:textColor="@color/blue_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Nomor Telepon"
                android:textColor="@color/home_secondary"
                android:textSize="16sp" />

            <EditText
                android:fontFamily="@font/poppins_regular"
                android:hint="Kata Sandi"
                android:textColor="@color/blue_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Email"
                android:textColor="@color/home_secondary"
                android:textSize="16sp" />

            <EditText
                android:fontFamily="@font/poppins_regular"
                android:hint="Email Anda"
                android:textColor="@color/blue_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Kata Sandi"
                android:textColor="@color/home_secondary"
                android:textSize="16sp" />

            <EditText
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:hint="Masukkan Kata Sandi"
                android:textColor="@color/blue_auth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Ulangi Kata Sandi"
                android:textColor="@color/home_secondary"
                android:textSize="16sp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:hint="Ulangi Kata Sandi"
                android:textColor="@color/blue_auth" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Daftar"
                android:textAllCaps="false"
                android:fontFamily="@font/montserrat_bold"
                app:cornerRadius="10dp"
                />
        </LinearLayout>

    </ScrollView>


</RelativeLayout>