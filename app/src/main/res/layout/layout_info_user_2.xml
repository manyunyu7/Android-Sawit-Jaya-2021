<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_profile"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_container_info_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginVertical="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:maxLines="1"
            android:text="Informasi Pemilik Kebun"
            android:textColor="@color/blue_auth"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/container_user_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_container_info_user"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/iv_profile_picture"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/label_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_container_info_user"
            android:layout_toEndOf="@id/container_user_pic"
            android:fontFamily="@font/jaldi_regular"
            android:text="Nama Pemilik : " />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_user_name"
            android:layout_toEndOf="@id/container_user_pic"
            android:fontFamily="@font/jaldi_regular"
            android:textColor="@color/black"
            tools:text="@string/LOADING" />

        <TextView
            android:id="@+id/label_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_name"
            android:layout_toEndOf="@id/container_user_pic"
            android:fontFamily="@font/jaldi_regular"
            android:text="Email : " />

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_user_email"
            android:layout_toEndOf="@id/container_user_pic"
            android:fontFamily="@font/jaldi_regular"
            android:textColor="@color/black"
            tools:text="@string/LOADING" />

        <TextView
            android:id="@+id/label_user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_user_email"
            android:layout_toEndOf="@id/container_user_pic"
            android:fontFamily="@font/jaldi_regular"
            android:text="Kontak : " />

        <TextView
            android:id="@+id/tv_user_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/label_user_contact"
            android:layout_toEndOf="@id/container_user_pic"
            android:fontFamily="@font/jaldi_regular"
            android:textColor="@color/black"
            tools:text="@string/LOADING" />

</RelativeLayout>

