<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/containerUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/btn_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/color_blue_golapak"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_chat"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:src="@drawable/ic_chat_on_detail"
                android:text="left" />

            <TextView
                android:id="@+id/tv_text_chat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".70"
                android:fontFamily="@font/montserrat_regular"
                android:text="Chat Petugas"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_live_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_img_track"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:src="@drawable/ic_location_on_detail"
                android:text="left" />

            <TextView
                android:id="@+id/tv_text_track"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".70"
                android:fontFamily="@font/montserrat_regular"
                android:text="Track Lokasi Driver"
                android:textColor="@color/color_blue_golapak" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/containerStaff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerUser">

        <LinearLayout
            android:id="@+id/btn_update_transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/bs_update_transaction"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_img_track_for_staff"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:src="@drawable/ic_update_on_detail"
                android:text="left" />

            <TextView
                android:id="@+id/tv_text_track_for_staff"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".70"
                android:fontFamily="@font/montserrat_regular"
                android:text="Update Transaksi"
                android:textColor="@color/color_blue_golapak" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>