<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/btn_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:src="@drawable/ic_baseline_app_registration_24"
                android:text="left"
                app:tint="@color/color_blue_golapak" />

            <TextView
                style="@style/Montserrat.OnPrimary.14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".70"
                android:fontFamily="@font/montserrat_regular"
                android:text="Update Transaksi"
                android:textColor="@color/color_blue_golapak" />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/btn_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:tint="@color/color_blue_golapak"
                android:src="@drawable/ic_chat_on_detail"
                android:text="left" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                style="@style/Montserrat.OnPrimary.14sp"
                android:layout_weight=".70"
                android:text="Chat Petugas"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_live_track"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:src="@drawable/ic_location_on_detail"
                android:text="left" />

            <TextView
                android:layout_width="0dp"
                style="@style/Montserrat.OnPrimary.14sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".70"
                android:fontFamily="@font/montserrat_regular"
                android:text="Track Lokasi Driver"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/btn_invoice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_img_chat"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:src="@drawable/ic_file_blank_outline"
                android:text="left" />

            <TextView
                android:id="@+id/tv_text_chat"
                style="@style/Montserrat.OnPrimary.14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".70"
                android:text="Invoice/Nota Digital" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btn_scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_img_track"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginVertical="5dp"
                android:layout_weight=".20"
                android:src="@drawable/ic_table"
                android:text="left" />

            <TextView
                android:id="@+id/tv_text_track"
                style="@style/Montserrat.OnPrimary.14sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_weight=".70"
                android:fontFamily="@font/montserrat_regular"
                android:text="Hasil Timbangan"
                android:textColor="@color/color_blue_golapak" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>